                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        <Entry x:Name="EntryGrossTotal" Placeholder="Enter total amount earned this year so far" FontAttributes="Bold"  HorizontalOptions="Center" TextColor="#FFFFFF" HorizontalTextAlignment="Center" PlaceholderColor="#FFFFFF" Keyboard="Numeric" Margin="0,80,0,0"  />
        <Button x:Name="SubmitButton" Text="Submit" VerticalOptions="EndAndExpand" BackgroundColor="#2699FB" Margin="0,0,0,50" />

    </StackLayout>
</ContentPage>
