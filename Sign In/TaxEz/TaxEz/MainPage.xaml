<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxEz.MainPage">

    <StackLayout BackgroundColor="#232A34" >
        <Image Source="taxezlogo.png" Margin="0,180,0,0"  />
        <Label Text="We make managing your money " HorizontalTextAlignment="Center" TextColor="#2699FB" FontSize="Subtitle" FontAttributes="Bold" />
        <Label Text="Easy " HorizontalTextAlignment="Center" TextColor="#2699FB" FontSize="Subtitle" FontAttributes="Bold" />
        <StackLayout Margin="0,80,0,0">
            <Button x:Name="SignInButton" Text="Sign In" HorizontalOptions="Center" WidthRequest="350" HeightRequest="-1"/>
            <Button x:Name="SignUpButton" Text="Sign Up" HorizontalOptions="Center" BackgroundColor="#2699FB" WidthRequest="345" HeightRequest="40"/>
        </StackLayout>
    </StackLayout>


</ContentPage>
